<Window xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  x:Class="MonitoringAdmin.WindowItemsManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowItemsManagement" Height="600" Width="600" WindowState="Maximized" Loaded="WindowItemsManagement_OnLoaded">
    <Window.Resources>
        <DataTemplate x:Key="DataTemplateListBoxItems">
            <StackPanel Margin="2,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name : " FontWeight="Bold"/>
                    <TextBlock Text="{Binding ItemName}"/>
                    <TextBlock Text="Type : " Margin="5,0,0,0" FontWeight="Bold"/>
                    <TextBlock Text="{Binding ItemTypeString}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Location : " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Location}"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="Tab">
            <TextBlock Text="{Binding TabName}" />
        </DataTemplate>
        <HierarchicalDataTemplate x:Key="TabItems" ItemTemplate="{StaticResource Tab}"
           ItemsSource="{Binding Items}">
            <TextBlock Text="{Binding ItemName}"/>
        </HierarchicalDataTemplate>

    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5">Tabs</TextBlock>

                    <telerik:RadBusyIndicator Grid.Row="1" Name="BusyIndicatorTabs" IsIndeterminate="True">
                        <telerik:RadTreeView Name="TreeViewTabs" ItemTemplate="{StaticResource TabItems}">
                            <telerik:RadContextMenu.ContextMenu>
                                <telerik:RadContextMenu Name="ContextMenuTreeViewTabs">
                                    <telerik:RadMenuItem Header="Add Items to Tab" Name="MenuItemAddItemsToTab" Click="MenuItemAddItemsToTab_OnClick"/>
                                </telerik:RadContextMenu>
                            </telerik:RadContextMenu.ContextMenu>
                        </telerik:RadTreeView>
                    </telerik:RadBusyIndicator>
                </Grid>



                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5">Users</TextBlock>

                    <telerik:RadBusyIndicator Grid.Row="1" Name="BusyIndicatorUsers" IsIndeterminate="True">
                        <telerik:RadTreeView Name="TreeViewUsers"/>
                    </telerik:RadBusyIndicator>
                </Grid>


                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5">Items</TextBlock>

                    <telerik:RadBusyIndicator Grid.Row="1" Name="BusyIndicatorItems" IsIndeterminate="True">
                        <telerik:RadListBox Name="ListBoxItems" ItemTemplate="{StaticResource DataTemplateListBoxItems}"
                                        SelectionMode="Extended"/>
                    </telerik:RadBusyIndicator>
                </Grid>

            </Grid>

            <StatusBar Name="StatusBarBottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"
                   MouseDoubleClick="StatusBarBottom_OnMouseDoubleClick" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
