<Window xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  x:Class="IndustrialMonitoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="MainWindow_OnLoaded"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <telerik:RadBusyIndicator Name="BusyIndicator">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition MinHeight="10" MaxHeight="25"/>
                </Grid.RowDefinitions>
                
                <DockPanel>
                    <telerik:RadRibbonView Name="RadRibbonView" />
                </DockPanel>
            </Grid>
        </telerik:RadBusyIndicator>
    </Grid>
</Window>
